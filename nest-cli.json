{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "apps/hotels/src",
    "compilerOptions": {
        "deleteOutDir": true,
        "webpack": true,
        "tsConfigPath": "apps/hotels/tsconfig.app.json"
    },
    "monorepo": true,
    "root": "apps/hotels",
    "projects": {
        "hotels": {
            "type": "application",
            "root": "apps/hotels",
            "entryFile": "main",
            "sourceRoot": "apps/hotels/src",
            "compilerOptions": {
                "tsConfigPath": "apps/hotels/tsconfig.app.json"
            }
        },
        "entity": {
            "type": "library",
            "root": "libs/entity",
            "entryFile": "index",
            "sourceRoot": "libs/entity/src",
            "compilerOptions": {
                "tsConfigPath": "libs/entity/tsconfig.lib.json"
            }
        },
        "utils": {
            "type": "library",
            "root": "libs/utils",
            "entryFile": "index",
            "sourceRoot": "libs/utils/src",
            "compilerOptions": {
                "tsConfigPath": "libs/utils/tsconfig.lib.json"
            }
        },
        "modules": {
            "type": "library",
            "root": "libs/modules",
            "entryFile": "index",
            "sourceRoot": "libs/modules/src",
            "compilerOptions": {
                "tsConfigPath": "libs/modules/tsconfig.lib.json"
            }
        },
        "users": {
            "type": "application",
            "root": "apps/users",
            "entryFile": "main",
            "sourceRoot": "apps/users/src",
            "compilerOptions": {
                "tsConfigPath": "apps/users/tsconfig.app.json"
            }
        },
        "rooms": {
            "type": "application",
            "root": "apps/rooms",
            "entryFile": "main",
            "sourceRoot": "apps/rooms/src",
            "compilerOptions": {
                "tsConfigPath": "apps/rooms/tsconfig.app.json"
            }
        },
        "reservations": {
            "type": "application",
            "root": "apps/reservations",
            "entryFile": "main",
            "sourceRoot": "apps/reservations/src",
            "compilerOptions": {
                "tsConfigPath": "apps/reservations/tsconfig.app.json"
            }
        }
    }
}
