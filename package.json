{
    "name": "test",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "workspaces": [
        "apps/hotels",
        "apps/reservations",
        "apps/rooms",
        "apps/users",
        "libs/entity",
        "libs/modules",
        "libs/utils"
    ],
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "build:hotels:dev": "cross-env NODE_ENV=dev nest build hotels",
        "build:hotels:test": "cross-env NODE_ENV=test nest build hotels",
        "build:hotels:prod": "cross-env NODE_ENV=prod nest build hotels",
        "build:reservations:dev": "cross-env NODE_ENV=dev nest build reservations",
        "build:reservations:test": "cross-env NODE_ENV=test nest build reservations",
        "build:reservations:prod": "cross-env NODE_ENV=prod nest build reservations",
        "build:rooms:dev": "cross-env NODE_ENV=dev nest build rooms",
        "build:rooms:test": "cross-env NODE_ENV=test nest build rooms",
        "build:rooms:prod": "cross-env NODE_ENV=prod nest build rooms",
        "build:users:dev": "cross-env NODE_ENV=dev nest build users",
        "build:users:test": "cross-env NODE_ENV=test nest build users",
        "build:users:prod": "cross-env NODE_ENV=prod nest build users",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start:hotels:dev": "cross-env NODE_ENV=dev nest start --debug --watch --exec 'node -r tsconfig-paths/register -r ts-node/register ./apps/hotels/src/main.ts'",
        "start:reservations:dev": "cross-env NODE_ENV=dev nest start reservations --watch",
        "start:rooms:dev": "cross-env NODE_ENV=dev nest start rooms --watch",
        "start:users:dev": "cross-env NODE_ENV=dev nest start users --watch",
        "start:hotels:prod": "cross-env NODE_ENV=prod node dist/hotels/main.js",
        "start:reservations:prod": "cross-env NODE_ENV=prod node dist/reservations/main.js",
        "start:rooms:prod": "cross-env NODE_ENV=prod node dist/rooms/main.js",
        "start:users:prod": "cross-env NODE_ENV=prod node dist/users/main.js",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/common": "^10.0.0",
        "@nestjs/config": "^3.2.0",
        "@nestjs/core": "^10.0.0",
        "@nestjs/platform-express": "^10.0.0",
        "class-validator": "^0.14.1",
        "cross-env": "^7.0.3",
        "reflect-metadata": "^0.2.0",
        "rxjs": "^7.8.1",
        "ts-loader": "^9.5.1",
        "tsc-alias": "^1.8.8",
        "winston-daily-rotate-file": "^5.0.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.0.0",
        "@nestjs/schematics": "^10.0.0",
        "@nestjs/testing": "^10.0.0",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.3.1",
        "@types/supertest": "^6.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "jest": "^29.5.0",
        "prettier": "^3.0.0",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.0",
        "typescript": "^5.1.3"
    }
}
